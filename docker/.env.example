# =============================================================================
# GWI POS - Docker Environment Configuration
# =============================================================================
# Copy this file to .env and configure for your location
#
#   cp .env.example .env
#   nano .env
#
# NOTE: In production, provision.sh writes these values automatically.
# =============================================================================

# -----------------------------------------------------------------------------
# Location Settings (REQUIRED)
# -----------------------------------------------------------------------------

# Unique identifier for this location (from Mission Control)
LOCATION_ID=loc_xxxxxxxxxxxxx

# Display name for this location
LOCATION_NAME="Downtown Bar & Grill"

# Timezone (see: https://en.wikipedia.org/wiki/List_of_tz_database_time_zones)
TZ=America/New_York

# -----------------------------------------------------------------------------
# Network Settings
# -----------------------------------------------------------------------------

# Port to expose (default: 3000)
PORT=3000

# URL for this server (used for callbacks and redirects)
# For local network: http://192.168.1.100:3000
# With reverse proxy: https://pos.yourrestaurant.com
NEXTAUTH_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# Security (REQUIRED)
# -----------------------------------------------------------------------------

# Secret key for session encryption (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=your-secret-key-here-minimum-32-characters

# -----------------------------------------------------------------------------
# Database (REQUIRED — Neon PostgreSQL)
# -----------------------------------------------------------------------------

# Pooler connection (for queries — connection pooling via PgBouncer)
DATABASE_URL=postgresql://user:password@host-pooler.neon.tech/gwi_pos_venue?sslmode=require

# Direct connection (for migrations — bypasses PgBouncer)
DIRECT_URL=postgresql://user:password@host.neon.tech/gwi_pos_venue?sslmode=require

# -----------------------------------------------------------------------------
# Cloud Sync (Optional - for multi-location reporting)
# -----------------------------------------------------------------------------

# Enable cloud sync
SYNC_ENABLED=false

# GWI Admin Console API
# SYNC_API_URL=https://admin.gwipos.com/api
# SYNC_API_KEY=your-api-key

# -----------------------------------------------------------------------------
# Real-time Events (Optional)
# -----------------------------------------------------------------------------

# Provider: 'local' (Socket.io), 'pusher', or 'ably'
EVENTS_PROVIDER=local

# Pusher configuration (if using Pusher)
# PUSHER_APP_ID=your-app-id
# PUSHER_KEY=your-key
# PUSHER_SECRET=your-secret
# PUSHER_CLUSTER=us2

# -----------------------------------------------------------------------------
# Auto-Update Settings (Watchtower)
# -----------------------------------------------------------------------------

# Check for updates every N seconds (default: 3600 = 1 hour)
WATCHTOWER_INTERVAL=3600

# -----------------------------------------------------------------------------
# Hardware / Printers
# -----------------------------------------------------------------------------

# Default receipt printer IP (can be configured in admin UI)
# RECEIPT_PRINTER_IP=192.168.1.200
# RECEIPT_PRINTER_PORT=9100

# Kitchen printer IP
# KITCHEN_PRINTER_IP=192.168.1.201
# KITCHEN_PRINTER_PORT=9100

# -----------------------------------------------------------------------------
# Advanced Settings
# -----------------------------------------------------------------------------

# Enable debug logging
# DEBUG=true

# Node.js memory limit (in MB)
# NODE_OPTIONS=--max-old-space-size=512
